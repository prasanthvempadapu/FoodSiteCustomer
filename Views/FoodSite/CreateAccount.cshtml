@model NewUser
@{
    ViewData["Title"] = "CreateAccount";
}
<div style="background-image: url('https://d1tgh8fmlzexmh.cloudfront.net/ccbp-responsive-website/foodmunch-banner-bg.png'); background-size:cover; width:100vw; padding-bottom:200px;">
<div class=" d-flex justify-content-center">
        <img  style="height:130px; width:130px; margin-top:30px;" src="https://tse2.mm.bing.net/th/id/OIP.mHD5PEdxPmwhknCmMhdgxAHaHa?pid=ImgDet&rs=1" />
    </div>
<h1 style="color:#ff6e31;" class="pt-2 text-center">Persistent's Cafeteria</h1>
<h2 class="text-primary text-center">Create New Account</h2>
<div class="d-flex justify-content-center">
        <div>
<form class="" id="myForm" method="post" asp-controller="FoodSite" asp-action="CreateAccount">
    

       
    <div class="d-flex">
        
        <label style="width:180px; margin-right:40px; font-weight:bold;" class="mb-5 mt-4 text-white" asp-for="UserName">Enter New User Name</label>
        <div class="pt-4 d-flex flex-column">
        <input required placeholder="Username" class="" type="text" asp-for="UserName"/>
        <span class="text-danger" asp-validation-for="UserName">*Must be Unique</span>
        </div>
    </div>
    <div class="pt-3 d-flex">
        <label class="mb-5 text-white" style="font-weight:bold; width:180px; margin-right:40px;" asp-for="Password">Enter New Password</label>
        <div class="pt-1 d-flex flex-column">
        <input required id="pwdInput" placeholder="Password" class="" type="password" asp-for="Password"/>
        <span id="password" class="text-danger" asp-validation-for="Password"></span>
         </div>
    </div>
    <div class="d-flex">
        <label style="width:180px; margin-right:40px; font-weight:bold;" class="text-white mb-5" asp-for="ConfirmPassword">Enter Confirm Password</label>
         <div class="pt-1 d-flex flex-column">
        <input id="cnfInput" placeholder="Confirm Password" required class="" type="password" asp-for="ConfirmPassword"/>
        <span id="cnfPwd" class="text-danger" asp-validation-for="ConfirmPassword"></span>
         </div>
    </div>
    <div class="d-flex">
    <input style="margin-right:30px;" type="submit" class="btn btn-success" value="Create Account" />
    
        @*<input asp-action="Index" asp-controller="FoodSite" type="" class="btn btn-primary" value="Login" />*@
        <a class="btn-primary btn" asp-controller="FoodSite" asp-action="Index"> Login</a>
    
    </div>
</form>
<script>
    var formElement = document.getElementById("pwdInput");
    var inputElement = document.getElementById("pwdInput");
    var cnfInput = document.getElementById("cnfInput");
    var cnfPwd = document.getElementById("cnfPwd");
    formElement.addEventListener("blur", passwordFunction);
    function passwordFunction() {
        if(pwdInput.value===""){
            document.getElementById("password").innerHTML = "*password required";
        }else{
            document.getElementById("password").innerHTML = "";
        }
    
}
    cnfInput.addEventListener("blur",confirmFunction);
    function confirmFunction(){
        if(cnfInput.value===""){
            cnfPwd.innerHTML = "*password required";
        }else{
            cnfPwd.innerHTML = "";
        }
    }
</script>
</div>
 </div>
    </div>